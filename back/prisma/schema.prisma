generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Character {
  id       String     @id @default(uuid())
  name     String
  title    String
  weapon   Weapon
  factions Factions[]
  vision   Elements   @relation(fields: [visionId], references: [id])
  visionId String
  nation   Nation     @relation(fields: [nationId], references: [id])
  nationId String
}

model Factions {
  id        String      @id @default(uuid())
  name      String      @unique
  nation    Nation      @relation(fields: [nationId], references: [id])
  nationId  String
  character Character[]
}

model Weapons {
  id     String @id @default(uuid())
  name   String
  rarity Rarity
  type   Weapon
}

model Nation {
  id        String      @id @default(uuid())
  name      String
  element   Elements    @relation(fields: [elementId], references: [id])
  elementId String      @unique
  Character Character[]
  Factions  Factions[]
}

model Elements {
  id        String      @id @default(uuid())
  name      String
  Character Character[]
  Nation    Nation?
}

enum Weapon {
  Sword
  Claymore
  Bow
  Catalyst
  Polearm
}

enum Rarity {
  FiveStar
  FourStar
  ThreeStar
}
