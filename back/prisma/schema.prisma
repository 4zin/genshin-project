generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Character {
  id       String   @id @default(uuid())
  name     String
  title    String
  weapon   Weapon
  vision   Elements @relation(fields: [visionId], references: [id])
  visionId String   @unique
  nation   Nation   @relation(fields: [nationId], references: [id])
  nationId String
}

model Nation {
  id        String     @id @default(uuid())
  name      String
  element   Elements   @relation(fields: [elementId], references: [id])
  elementId String     @unique
  Character Character[]
}

model Elements {
  id        String     @id @default(uuid())
  name      String
  Character Character?
  Nation    Nation?
}

enum Weapon {
  Sword
  Claymore
  Bow
  Catalyst
  Polearm
}
